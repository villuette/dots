{
    "workbench.colorTheme": "Best Themes - Slime Extra Dark",
    "window.titleBarStyle": "native", 
    "window.menuBarVisibility": "toggle",
    "window.titleSeparator": " | ",
    "search.defaultViewMode": "list",
    "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/*.code-search": true
    },
    
    "editor.formatOnSave": true,
    "debug.toolBarLocation": "hidden",
    "editor.fontFamily": "Hack Nerd Font Mono",
    "editor.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
    "vim.leader": "<space>",
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
  {
    "before": ["ctrl+n"],
    "commands": ["editor.action.marker.next"]
  },
  {
    "before": ["ctrl+p"],
    "commands": ["editor.action.marker.prev"]
  },
  {
    "before": ["<leader>", "x"],
    "commands": ["workbench.action.closeActiveEditor"]
  },
  {
    "before": ["<leader>", "f", "r"],
    "commands": ["editor.action.referenceSearch.trigger"]
  },
  {
    "before": ["<leader>", "f", "f"],
    "commands": ["workbench.action.findInFiles"],
    "after": ["<Esc>"]
  },
  {
    "before": ["<leader>", "d"],
    "commands": ["editor.action.revealDefinition"]
  },
  {
    "before": ["<leader>", "h"],
    "commands": ["workbench.action.previousEditor"]
  },
  {
    "before": ["<leader>", "l"],
    "commands": ["workbench.action.nextEditor"]
  },
  {
    "before": ["<leader>", "r", "b"],
    "commands": ["workbench.action.tasks.runTask"],
    "extraArgs": {
      "task": "Build"
    }
  },
  {
    "before": ["<leader>", "r", "d"],
    "commands": ["workbench.action.debug.start"]
  },
],
"clangd.path": "/home/villuet/.config/Code - OSS/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/19.1.2/clangd_19.1.2/bin/clangd",
"window.commandCenter": false,
"workbench.layoutControl.enabled": false,
"git.confirmSync": false,
"git.autofetch": true
}